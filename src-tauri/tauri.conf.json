{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "VJ.Tools",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.vjeventsync.app",
      "icon": [
        "icons/VJToolsRounded.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "VJ.Tools",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "transparent": true,
        "decorations": false,
        "center": true
      }
    ],
    "macOSPrivateApi": true,
    "menu": [
      {
        "label": "File",
        "submenu": [
          { "label": "Close Window", "accelerator": "CmdOrCtrl+W", "role": "close" }
        ]
      },
      {
        "label": "Edit",
        "submenu": [
          { "label": "Undo", "accelerator": "CmdOrCtrl+Z", "role": "undo" },
          { "label": "Redo", "accelerator": "CmdOrCtrl+Shift+Z", "role": "redo" },
          { "type": "separator" },
          { "label": "Cut", "accelerator": "CmdOrCtrl+X", "role": "cut" },
          { "label": "Copy", "accelerator": "CmdOrCtrl+C", "role": "copy" },
          { "label": "Paste", "accelerator": "CmdOrCtrl+V", "role": "paste" },
          { "label": "Select All", "accelerator": "CmdOrCtrl+A", "role": "selectAll" }
        ]
      },
      {
        "label": "View",
        "submenu": [
          { "label": "Reload", "accelerator": "CmdOrCtrl+R", "role": "reload" },
          { "label": "Force Reload", "accelerator": "CmdOrCtrl+Shift+R", "role": "forceReload" },
          { "label": "Toggle Developer Tools", "accelerator": "F12", "role": "toggleDevTools" },
          { "type": "separator" },
          { "label": "Toggle Fullscreen", "role": "toggleFullscreen" }
        ]
      },
      {
        "label": "Layout",
        "submenu": [
           { "label": "Save Current Layout", "id": "save-layout", "accelerator": "CmdOrCtrl+S" },
           { "type": "separator" },
           { "label": "Reset to Default Layout", "id": "reset-layout" }
        ]
      },
      {
        "label": "Window",
        "submenu": [
          { "label": "Minimize", "accelerator": "CmdOrCtrl+M", "role": "minimize" },
          { "label": "Zoom", "role": "zoom" }
        ]
      },
      {
        "label": "Help",
        "submenu": [
          { "label": "Learn More", "id": "learn-more" }
        ]
      }
    ]
  }
} 